---
  parser: babel-eslint
  extends:
    - eslint:recommended
    - plugin:react/recommended
  plugins:
    # - jest
    - react
    - import
    # - private-props
  env:
    es6: true
    node: true
    jest: true
    jasmine: true
    browser: true
  parserOptions:
    ecmaFeatures:
      modules: true
      jsx: true
  settings:
    react:
      pragma: h
  rules:
    array-bracket-spacing: 2
    arrow-body-style: 2
    arrow-parens: [2, always]
    eol-last: [2, always]
    comma-dangle: [2, { arrays: always-multiline, objects: always-multiline, imports: always-multiline, exports: always-multiline, functions: ignore }]
    consistent-return: 2
    global-require: 0
    jsx-quotes: [2, prefer-single]
    linebreak-style: 0
    newline-per-chained-call: 0
    no-await-in-loop: 0
    no-bitwise: 0
    no-console: 2
    no-plusplus: 0
    no-restricted-imports: [error, lodash]
    no-restricted-syntax: [error, ForInStatement, LabeledStatement, WithStatement]
    no-shadow: 2
    no-template-curly-in-string: 2
    no-unused-expressions: 0
    no-underscore-dangle: 0
    no-use-before-define: 2
    no-warning-comments: [1, {terms: [todo, fixme], location: anywhere}]
    object-curly-spacing: [2, always]
    padded-blocks: [2, { classes: never }]
    prefer-template: 2
    require-await: 2
    semi: 2
    yoda: [error, never, { exceptRange: true }]
    import/extensions: [0, .js, .jsx, .ts, .tsx]
    import/prefer-default-export: 0
    import/newline-after-import: 0
    import/no-dynamic-require: 2
    import/no-duplicates: 2
    import/no-extraneous-dependencies: 0
    import/no-named-as-default: 2
    import/no-named-as-default-member: 2
    import/no-unresolved: [2, { commonjs: true, ignore: [AppTestUtil] }]
    # jest/no-disabled-tests: 1
    # jest/no-focused-tests: 1
    # jest/no-identical-title: 2
    # private-props/no-unused-or-undeclared: [2, { privateMatchers: [^_, ^handle.+, ^render.+] }]
    react/forbid-prop-types: [2, { forbid: [any] }]
    react/jsx-curly-spacing: 2
    react/jsx-no-bind: [2, { ignoreRefs: true }]
    react/jsx-no-duplicate-props: 2
    react/jsx-no-comment-textnodes: 2
    react/jsx-no-undef: 2
    react/jsx-uses-react: 2
    react/jsx-uses-vars: 2
    react/no-direct-mutation-state: 2
    react/no-find-dom-node: 2
    react/no-is-mounted: 2
    react/no-string-refs: 2
    react/no-unused-prop-types: 2
    react/prefer-es6-class: 2
    react/prefer-stateless-function: 0
    react/prop-types: 2
    react/require-render-return: 2
    react/self-closing-comp: 2
    react/sort-comp: [2, { order: [static-methods, type-annotations, lifecycle, /^is.+$/, /^get.+$/, /^set.+$/, /^handle.+$/, everything-else, render] }]
    react/require-default-props: 2
