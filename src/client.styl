global-reset()

$easing-quick = cubic-bezier(.215, .61, .355, 1)
$easing-kickback = cubic-bezier(0.175, 0.885, 0.32, 1.275)

html, body
  margin 0
  padding 0
  height 100%
  line-height 1.5
  font-size 12px
  font-weight 300
  font-family '游ゴシック', YuGothic, 'ヒラギノゴシック ProN W3', 'Hiragino Gothic ProN', 'メイリオ', Meiryo, sans-serif
  color white
  font-smoothing antialiased
  background-color black
  -webkit-tap-highlight-color transparent

ul, li
  margin 0
  padding 0
  list-style none

#app
  height 100%

#App
  height 100%

  &Back
    position fixed
    top 0
    left 50%
    bottom 0
    background-size cover
    background-position 50% 50%
    width 100%
    max-width 1024px
    transform translateX(-50%)

    &:before
      z-index 5
      content ''
      display block
      position absolute
      top 0
      left 0
      bottom 0
      width 0
      height 100%
      box-shadow 0 0 60px 80px black

    &:after
      z-index 5
      content ''
      display block
      position absolute
      top 0
      right 0
      bottom 0
      width 0
      height 100%
      box-shadow 0 0 60px 80px black

    &Elevator
      z-index 1
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background-size cover
      background-position 50% 50%
      max-width 1024px

    &Lattice
      z-index 2
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background-repeat repeat
      max-width 1024px

    &People
      z-index 3
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      overflow hidden
      background-size cover
      background-position 50% 50%
      max-width 1024px

  &Menu
    z-index 20
    position fixed
    top 0
    left 50%
    bottom 0
    width 100%
    max-width 1424px
    font-size 1.2em
    list-style none
    transform translateX(-50%)

    &Body
      padding 20px

    img
      margin-bottom 40px
      width 240px

    .AppMenu
      padding-left 52px
      position relative

      &:after
        content ''
        display block
        position absolute
        top 50%
        left 0
        width 40px
        height 1px
        background-color white
        transform translateY(-50%)

  &Copy
    box-sizing border-box
    z-index 10
    position relative
    padding-top 20px
    font-family '游明朝', YuMincho, 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN', 'メイリオ', Meiryo, serif
    font-weight bold
    font-size 4em
    text-shadow 2px 2px 4px rgba(#0C2953, 0.96)

    &Body
      margin 0 auto
      transform translateX(-240px)
      writing-mode vertical-rl

    .copy2
      padding-top 3em

  &Main
    z-index 15
    box-sizing border-box
    position relative

    .AppSection
      background-color rgba(black, 0.72)

      &Body
        margin 0 auto
        padding 20px 0
        width 100%
        max-width 768px

    .AppSectionSpace
      &:before
        content ''
        display block
        padding-top 100%

      &.half:before
        padding-top 50%
